<!-- mobile contact form-->
<%= form_for(@contact ,:url => polymorphic_path(@contact, :anchor => 'anchor=m-f')) do |f| %>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
       <tr>
	       <th valign="top">*姓名</th>
              <td valign="top">
              	<%= f.text_field :name, :class => 'form-control' , :required => true %>
              </td>
       </tr>     
    
         <tr>
              <th valign="top">*聯絡電話</th>
              <td><%= f.text_field :phone, :class => 'form-control', :type=>"tel"%></td>
        </tr>
                
        <tr>
          <th valign="top">*Email</th>
          <td><%= f.text_field :email,:class => 'form-control',:required => true%></td>
        </tr>

        <tr>
                 <th valign="top">*學英文的<br>
          目的</th>
          <td valign="top">
              <% @purpose.each do | purpose | %>
              	<label>
              	<%= f.check_box :purpose, { :multiple => true, :name => "contact[purpose][]" }, purpose[0], nil %> 
              		<%= purpose[1] %>
              	</label>
              <% end %>
          </td>
        </tr>
        <tr>
            <th valign="top">*課程諮詢</th>
            <td valign="top">
                <% @consultcourse.each do | consultcourse | %>
                <label>
	                <%= f.check_box :consultcourse, { :multiple => true, :name => "contact[consultcourse][]" }, consultcourse[0], nil %> 
	                <%= consultcourse[1] %>
	                </label>
	                <% end %>
             </td>
          </tr>
  
          <tr>
            <th valign="top">留言</th>
            <td valign="top"><%= f.text_area :purposedetail %></td>
          </tr>             
      </table>
    <div class="text-center">
     <%= f.submit '送出', :class=> "btn btn-primary btn-lg" %>
    </div>
<% end %>

 