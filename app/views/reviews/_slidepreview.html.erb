<% @reviews.each do |review|%>

	<div class="studentbox <%= "hidden-xs" if review == @reviews.last %>">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th align="left" valign="top"><%= image_tag(review.cover) %><br>
            <span><%= review.name%></span></th>
          <td align="left" valign="top">
          <p>
         	 <%= link_to  testimonial_path(review)  do %>
         	 	<span><%= review.course%></span><br>
         	 	<%= review.title %>
     	 	<% end %>
           </p>
            <a href="<%=  testimonial_path(review) %>">閱讀全文</a>
            </td>
        </tr>
      </table>
    </div>
    
<% end %>