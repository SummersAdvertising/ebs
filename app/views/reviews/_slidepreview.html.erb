<% @reviews.each do |review|%>

	<div class="studentbox">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th align="left" valign="top"><%= image_tag(review.cover) %><br>
            <span>review.name</span></th>
          <td align="left" valign="top"><p><%= link_to review.title, review_path(review) %></p>
            <a href="<%=  review_path(review) %>">閱讀全文</a></td>
        </tr>
      </table>
    </div>
    
<% end %>