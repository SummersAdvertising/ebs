<%= form_for([:admin, @admin]) do | f | %>
  <section class="hgroup">
      <h2>個人資料</h2>
    </section>
    <!--hgroup-->
  <section class="text text-edit">
      <div class="half">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th valign="top"><%= f.label :email, '帳號' %></th>
            <td><%= f.email_field :email, :placeholder => "請輸入登入帳號"  %></td>
          </tr>
        </table>
      </div>
      <div class="half">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th valign="top"><%= f.label :name, '名稱' %></th>
            <td><%= f.text_field :name, :placeholder => "請輸入使用者名稱"  %></td>
          </tr>
        </table>
      </div>
    </section>
    <!--text-->
    <section class="hgroup">
      <h2>修改密碼</h2>
      <p>(如不修改密碼可不填此欄)</p>
    </section>
    <!--hgroup-->
    <section class="text text-edit">
      <div class="half">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th valign="top"><%= f.label :password, '新密碼' %></th>
            <td><%= f.password_field :password %></td>
          </tr>
        </table>
      </div>
      <div class="half">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th valign="top"><%= f.label :name, '確認密碼' %></th>
            <td><%= f.password_field :password_confirmation %></td>
          </tr>
        </table>
      </div>     
    </section>
        <section class="hgroup">
      <h2>其他</h2>
      <p>(如不修改可不填此欄)</p>
    </section>
    <!--hgroup-->
        <section class="text text-edit">
      <div class="one">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th valign="top">詢問通知：</th>
            <td>
            	<%= f.check_box :isnotify , { style: 'width:15px;position:relative;top:4px'  }, 1 , 0 %>
            </td>
          </tr>
        </table>
      </div> 
        </section>
    <!--text-->
    <section class="button">
	    <%= f.submit '',{ :style => 'display: none;' } %><a href="javascript: $('input:submit[name=commit]').click();"><img src="<%= image_path("save.png") %>">儲存</a>
	    <a href="<%= admin_admins_path %>"><img src="<%= image_path("cancel.png") %>">取消</a> </section>
    </section>
    <!--button--> 
    <% end %>
